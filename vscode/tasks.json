{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Auto-open README.",
        "type": "shell",
        "command": "code README.md",
        "runOptions": {
            "runOn": "folderOpen",
        },
        "presentation": {
            "echo": false,
            "reveal": "never",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false,
        }
      },
      {
        "label": "Install Copilot",
        "type": "shell",
        "command": "code --install-extension github.copilot",
        "runOptions": {
          "runOn": "folderOpen"
        },
        "presentation": {
          "reveal": "silent"
        }
      }
